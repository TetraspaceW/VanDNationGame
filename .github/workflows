name: "godot-ci export"
on: push

env:
  GODOT_VERSION: 3.5
  EXPORT_NAME: AFungusFallGuys

jobs:
  export-windows:
    name: Windows export
    runs-on: ubuntu-latest
    container:
      image: barichello/godot-ci:mono-3.5
    steps:
      - name: Checkout
        uses: actions/checkout@v2
        with:
          lfs: true
      - name: Setup
        run: |
          mkdir -v -p ~/.local/share/godot/templates
          mv /root/.local/share/godot/templates/${GODOT_VERSION}.stable.mono ~/.local/share/godot/templates/${GODOT_VERSION}.stable.mono
      - name: Windows Build
        run: |
          mkdir -v -p build/windows
          godot -v --export "windows" ../build/windows/$EXPORT_NAME.exe
      - name: Upload Artifact
        uses: actions/upload-artifact@v1
        with:
          name: VanDNationGame
          path: ../../VanDNationGame/build/windows
  discord-notification:
    name: Discord notification
    runs-on: ubuntu-latest
    needs: export-windows
    if: github.ref == 'refs/heads/master'
    steps:
      - name: Discord notification
        env:
          DISCORD_WEBHOOK: ${{ secrets.DISCORD_WEBHOOK_URL }}
        uses: Ilshidur/action-discord@master
        with:
          args: "A new build has been made, download at https://github.com/TetraspaceW/VanDNationGame/actions/runs/${{github.run_id}}"
